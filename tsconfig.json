{
  "ts-node": {
    "transpileOnly": true,
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "module": "es2020",
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@reducers/*": [ "./src/reducers/*" ]
    },
  },
  "exclude": [
    "node_modules"
  ]
}
